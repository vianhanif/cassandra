
<%= simple_form_for(@bencana) do |f| %>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <%= render 'form/error', form: @bencana %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="row">
          <%= render('form/input', form: f, width: 12, caption: 'Nama', name: :nama); %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-footer text-right">
    <button type="submit" class="btn btn-default">Submit</button>
  </div>
<% end %>

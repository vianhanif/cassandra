<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
      <div class="panel panel-default panel-admin" style="margin-top:100px;">
        <div class="panel-heading">
          Sosial Medias
          <%= link_to 'New Sosial Media', new_sosialmedia_path, class: 'pull-right' %>
        </div>
        <div class="panel-body table-responsive">
          <%= form_tag import_sosialmedias_path, multipart: true do %>
          <ul class="list-inline">
            <li>  <%= file_field_tag :file %></li>
            <li style="transform: translateX(-90px);"><%= submit_tag "Import Data", class: 'btn btn-default'%></li>
          </ul>
          <% end %>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Tanggal</th>
                <th>Link</th>
                <th>Bencana</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @sosialmedias.each do |sosialmedia| %>
                <tr>
                  <td><%= sosialmedia.tanggal %></td>
                  <td><%= sosialmedia.link %></td>
                  <td><%= sosialmedia.bencana.nama %></td>
                  <td><%= link_to 'Show', sosialmedia %></td>
                  <td><%= link_to 'Edit', edit_sosialmedia_path(sosialmedia) %></td>
                  <td><%= link_to 'Destroy', sosialmedia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= will_paginate @sosialmedias %>
        </div>
      </div>
    </div>
  </div>
</div>

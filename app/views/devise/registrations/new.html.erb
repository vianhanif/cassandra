<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="panel panel-default panel-admin" style="margin-top:100px;">
        <div class="panel-heading">
          Sign Up
        </div>
        <div class="panel-body">
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <%= f.input :email, required: false, autofocus: true, label: false, class: 'form-control' %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <%= f.input :password, required: true, class: 'form-control', label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Re-type Password</label>
              <%= f.input :password_confirmation, required: true, label: false, class: 'form-control' %>
            </div>
        </div>
        <div class="panel-footer">
          <div class="text-right">
            <button type="submit" class="btn btn-default ">Submit</button>
            <div class="pull-left">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="panel panel-default panel-admin" style="margin-top:100px;">
        <div class="panel-heading">
          Log in
        </div>
        <div class="panel-body">
          <%= f.error_notification %>
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <%= f.input :email, required: false, autofocus: true, label: false, class: 'form-control' %>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <%= f.input :password, required: false, label: false, class: 'form-control' %>
            </div>
            <div class="checkbox">
              <label>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </label>
            </div>
        </div>
        <div class="panel-footer">
          <button type="submit" class="btn btn-default pull-right">Submit</button>
          <%= render "devise/shared/links" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

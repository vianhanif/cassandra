<%= simple_form_for(@twitter) do |f| %>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <%= render 'form/error', form: @twitter %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="row">
          <%= render('form/input', form: f, width: 12, caption: 'Tanggal', name: :tanggal, type: 'date'); %>
          <%= render('form/input', form: f, width: 12, caption: 'Bencana', name: :bencana, type: 'select', select: :nama, value: :bencana); %>
          <%= render('form/input', form: f, width: 12, caption: 'Post', name: :post); %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-footer text-right">
    <button type="submit" class="btn btn-default">Submit</button>
  </div>
<% end %>

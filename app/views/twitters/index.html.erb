<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
      <div class="panel panel-default panel-admin" style="margin-top:100px;">
        <div class="panel-heading">
          Twitters
          <%= link_to 'New Twitter', new_twitter_path, class: 'pull-right' %>
        </div>
        <div class="panel-body table-responsive">
          <%= form_tag import_bnpbs_path, multipart: true do %>
          <ul class="list-inline">
            <li>  <%= file_field_tag :file %></li>
            <li style="transform: translateX(-90px);"><%= submit_tag "Import Data", class: 'btn btn-default'%></li>
          </ul>
          <% end %>
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Tanggal</th>
                <th>Post</th>
                <th>Bencana</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @twitters.each do |twitter| %>
                <tr>
                  <td><%= twitter.tanggal %></td>
                  <td><%= twitter.post %></td>
                  <td><%= twitter.bencana %></td>
                  <td><%= link_to 'Show', twitter %></td>
                  <td><%= link_to 'Edit', edit_twitter_path(twitter) %></td>
                  <td><%= link_to 'Destroy', twitter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= will_paginate @twitters %>
        </div>
      </div>
    </div>
  </div>
</div>

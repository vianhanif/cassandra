<%= simple_form_for(@bmkg) do |f| %>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <%= render 'form/error', form: @bmkg %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="row">
          <%= render('form/input', form: f, width: 12, caption: 'Tanggal', name: :tanggal, type: 'date'); %>
          <%= render('form/input', form: f, width: 12, caption: 'Suhu Min', name: :suhu_min, type: 'number'); %>
          <%= render('form/input', form: f, width: 12, caption: 'Suhu Max', name: :suhu_max, type: 'number'); %>
          <%= render('form/input', form: f, width: 12, caption: 'Suhu Rata-Rata', name: :suhu_rata, type: 'number'); %>
          <%= render('form/input', form: f, width: 12, caption: 'Kelembaban Rata-Rata', name: :kelembaban_rata, type: 'number'); %>
          <%= render('form/input', form: f, width: 12, caption: 'Curah Hujan', name: :curah_hujan, type: 'number'); %>
          <%= render('form/input', form: f, width: 12, caption: 'Lama Penyinaran', name: :lama_penyinaran, type: 'number'); %>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-footer text-right">
    <button type="submit" class="btn btn-default">Submit</button>
  </div>
<% end %>
